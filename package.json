{
  "name": "opencode-on-autopilot",
  "displayName": "Opencode on Autopilot",
  "description": "Automated Opencode on Autopilot task management with queue processing and auto-resume functionality",
  "version": "3.0.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.108.0",
    "node": ">=20.18.1"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:opencode-on-autopilot.start",
    "onCommand:opencode-on-autopilot.stop",
    "onCommand:opencode-on-autopilot.addMessage",
    "onCommand:opencode-on-autopilot.startWebInterface",
    "onCommand:opencode-on-autopilot.stopWebInterface",
    "onCommand:opencode-on-autopilot.showWebInterfaceQR",
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "opencode-on-autopilot.start",
        "title": "Start Opencode on Autopilot",
        "category": "Opencode"
      },
      {
        "command": "opencode-on-autopilot.stop",
        "title": "Stop Opencode on Autopilot",
        "category": "Opencode"
      },
      {
        "command": "opencode-on-autopilot.addMessage",
        "title": "Add Message to Queue",
        "category": "Opencode"
      },
      {
        "command": "opencode-on-autopilot.startWebInterface",
        "title": "Start Web Interface",
        "category": "Opencode"
      },
      {
        "command": "opencode-on-autopilot.stopWebInterface",
        "title": "Stop Web Interface",
        "category": "Opencode"
      },
      {
        "command": "opencode-on-autopilot.showWebInterfaceQR",
        "title": "Show Web Interface QR Code",
        "category": "Opencode"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "opencode-on-autopilot.start",
          "when": "true"
        },
        {
          "command": "opencode-on-autopilot.stop",
          "when": "true"
        },
        {
          "command": "opencode-on-autopilot.addMessage",
          "when": "true"
        },
        {
          "command": "opencode-on-autopilot.startWebInterface",
          "when": "true"
        },
        {
          "command": "opencode-on-autopilot.stopWebInterface",
          "when": "true"
        },
        {
          "command": "opencode-on-autopilot.showWebInterfaceQR",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Opencode on Autopilot",
      "properties": {
        "opencodeOnAutopilot.queue.maxSize": {
          "type": "number",
          "default": 1000,
          "minimum": 10,
          "maximum": 10000,
          "description": "Maximum number of messages in queue before cleanup"
        },
        "opencodeOnAutopilot.queue.maxMessageSize": {
          "type": "number",
          "default": 50000,
          "minimum": 1000,
          "maximum": 1000000,
          "description": "Maximum size of individual message text (bytes)"
        },
        "opencodeOnAutopilot.queue.maxOutputSize": {
          "type": "number",
          "default": 100000,
          "minimum": 1000,
          "maximum": 1000000,
          "description": "Maximum size of message output (bytes)"
        },
        "opencodeOnAutopilot.queue.retentionHours": {
          "type": "number",
          "default": 24,
          "minimum": 1,
          "maximum": 168,
          "description": "Hours to keep completed messages before cleanup"
        },
        "opencodeOnAutopilot.session.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start Opencode session when extension activates"
        },
        "opencodeOnAutopilot.session.skipPermissions": {
          "type": "boolean",
          "default": true,
          "description": "Skip Opencode CLI permission prompts (use --dangerously-skip-permissions)"
        },
        "opencodeOnAutopilot.session.scheduledStartTime": {
          "type": "string",
          "default": "",
          "description": "Schedule session start at specific time (HH:MM format, e.g., '09:30'). Cannot be used with autoStart. Empty string disables scheduling.",
          "pattern": "^(([01]?[0-9]|2[0-3]):[0-5][0-9])?$"
        },
        "opencodeOnAutopilot.session.freshSessionPerMessage": {
          "type": "boolean",
          "default": false,
          "description": "Start a brand new Opencode session for every message in the queue. Ensures total isolation but increases processing time."
        },
        "opencodeOnAutopilot.sleepPrevention.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Prevent computer from sleeping while processing queue"
        },
        "opencodeOnAutopilot.sleepPrevention.method": {
          "type": "string",
          "enum": [
            "auto",
            "caffeinate",
            "powershell",
            "systemd-inhibit"
          ],
          "default": "auto",
          "description": "Method to use for sleep prevention"
        },
        "opencodeOnAutopilot.history.maxRuns": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum number of history runs to keep"
        },
        "opencodeOnAutopilot.history.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save workspace history"
        },
        "opencodeOnAutopilot.history.persistPendingQueue": {
          "type": "boolean",
          "default": true,
          "description": "Save pending messages to survive VS Code restart"
        },
        "opencodeOnAutopilot.history.showInUI": {
          "type": "boolean",
          "default": false,
          "description": "Show history section in the Opencode on Autopilot interface"
        },
        "opencodeOnAutopilot.security.allowDangerousXssbypass": {
          "type": "boolean",
          "default": false,
          "description": "⚠️ WARNING: Allow bypassing XSS protection in webview content. Only enable if you trust all message content."
        },
        "opencodeOnAutopilot.webInterface.useExternalServer": {
          "type": "boolean",
          "default": false,
          "description": "Use external server (ngrok) for web interface. If disabled, uses local network only. Requires ngrok installation and auth setup."
        },
        "opencodeOnAutopilot.webInterface.password": {
          "type": "string",
          "default": "",
          "description": "Password for web interface access when using external server. Leave empty for no password protection."
        },
        "opencodeOnAutopilot.developmentMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable development mode with debug controls and testing features"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "cross-env NODE_ENV=production npm run compile",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "cross-env DEBUG_MODE=false npx @vscode/vsce package --no-dependencies --allow-star-activation",
    "publish": "npx @vscode/vsce publish --allow-star-activation",
    "prepackage": "npm run compile",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "mocha -r ts-node/register -r test/setup.ts test/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "ci": "npm run lint && npm run typecheck && npm test",
    "test:coverage": "nyc npm run test",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^5.2.3",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.1.0",
    "@types/qrcode": "^1.5.6",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.108.1",
    "@types/ws": "^8.18.1",
    "@vscode/vsce": "^3.7.1",
    "chai": "^6.2.2",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "globals": "^17.2.0",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "shx": "^0.4.0",
    "sinon": "^21.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "keywords": [
    "opencode",
    "ai",
    "automation",
    "queue",
    "task-management",
    "productivity",
    "development",
    "terminal",
    "machine-learning",
    "batch-processing",
    "workflow"
  ],
  "author": "Dayclone",
  "license": "MIT",
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": false,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "publisher": "Dayclone",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dayclone/opencode-on-autopilot"
  },
  "homepage": "https://github.com/Dayclone/opencode-on-autopilot#readme",
  "bugs": {
    "url": "https://github.com/Dayclone/opencode-on-autopilot/issues"
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "express": "^5.2.1",
    "qrcode": "^1.5.4",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  }
}
